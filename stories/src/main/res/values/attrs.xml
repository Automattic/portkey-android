<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VideoRecordingControlView">
        <attr name="strokeThickness" format="dimension" />
        <attr name="strokeFillColor" format="integer" />
        <attr name="strokeProgressColor" format="integer" />
    </declare-styleable>

    <!--
        Actionable Empty View
    -->
    <declare-styleable name="ActionableEmptyView">
        <!-- Optional: string text of button -->
        <attr name="aevButton" format="string"/>
        <!-- Optional: resource id of image -->
        <attr name="aevImage" format="reference"/>
        <!-- Optional: string text of subtitle -->
        <attr name="aevSubtitle" format="string"/>
        <!-- Required: string text of title -->
        <attr name="aevTitle" format="string"/>
    </declare-styleable>

    <declare-styleable name="FinishButton">
        <attr name="buttonMode" format="enum">
            <enum name="next" value="0"/>
            <enum name="done" value="1"/>
        </attr>
    </declare-styleable>
</resources>
