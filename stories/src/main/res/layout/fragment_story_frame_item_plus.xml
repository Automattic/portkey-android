<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:elevation="@dimen/story_frame_selector_item_elevation"
    android:paddingRight="@dimen/story_frame_selector_item_padding"
    android:paddingLeft="@dimen/story_frame_selector_item_padding"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <!-- this will hold the thumbnail img for the frame  -->
    <ImageView
        android:id="@+id/frame_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_white_24dp"
        android:contentDescription="@string/label_frame_image"
        android:layout_centerInParent="true"/>

    <!-- selected border  -->
    <ImageView
        android:id="@+id/frame_image_selected"
        android:layout_width="@dimen/story_frame_item_width"
        android:layout_height="@dimen/story_frame_item_height"
        android:background="@drawable/bg_story_item_plus_icon"
        android:scaleType="fitCenter"
        android:contentDescription="@string/label_frame_selected_border"
        android:layout_centerInParent="true"/>
</RelativeLayout>

