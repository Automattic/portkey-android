<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/color_picker_view_touchable_area"
    android:layout_width="@dimen/color_picker_touchable_area_size"
    android:layout_height="@dimen/color_picker_touchable_area_size"
    android:padding="@dimen/color_picker_item_margin"
    android:layout_alignParentTop="true"
    >


    <RelativeLayout
        android:id="@+id/color_picker_view_background"
        android:layout_width="@dimen/color_picker_background_size"
        android:layout_height="@dimen/color_picker_background_size"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_color_picker_background">

        <View
            android:id="@+id/color_picker_view_actual_color"
            android:layout_width="@dimen/color_picker_filler_size"
            android:layout_height="@dimen/color_picker_filler_size"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_color_picker_filler"/>
    </RelativeLayout>
</RelativeLayout>
