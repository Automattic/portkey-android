<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:gravity="center_horizontal|center_vertical">

    <View
        android:id="@+id/view_image"
        android:layout_width="@dimen/promo_placeholder_image_width"
        android:layout_height="@dimen/promo_placeholder_image_height"
        android:layout_gravity="center_horizontal"
        android:background="@color/lighter_gray" />

    <TextView
        style="@style/IntroTheme.PromoText"
        android:id="@+id/promo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/promo_image_screen_text_margin_top"
        android:minLines="3"
        tools:text="@string/intro_promo_text_create"
        android:layout_marginStart="@dimen/intro_message_side_margin_size"
        android:layout_marginEnd="@dimen/intro_message_side_margin_size"/>
</LinearLayout>
